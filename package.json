{
	"name": "games-app",
	"version": "0.0.1",
	"private": true,
	"prisma": {
		"schema": "backend/prisma/schema.prisma"
	},
	"scripts": {
		"fe:dev": "node scripts/vite.js dev",
		"fe:build": "node scripts/vite.js build",
		"fe:preview": "node scripts/vite.js preview",
		"be:dev": "tsc-watch2 --watch backend/src --watch shared --watch .env --buildStep 'tsc -b backend' --start 'node -r ./tsconfig-paths.js -r source-map-support/register dist/backend'",
		"be:build": "tsc -b --clean backend shared && tsc -b backend/tsconfig-prod.json",
		"be:start": "node -r ./tsconfig-paths.js dist/backend",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@eldigh/tsc-watch2": "^1.0.12",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/adapter-static": "^1.0.5",
		"@sveltejs/kit": "^1.0.0",
		"@types/bcryptjs": "^2.4.2",
		"@types/express": "^4.17.17",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/node": "^18.13.0",
		"@types/ws": "^8.5.4",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"sass": "^1.57.1",
		"source-map-support": "^0.5.21",
		"svelte": "^3.54.0",
		"svelte-check": "^2.9.2",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0",
		"vitest": "^0.25.3"
	},
	"dependencies": {
		"@prisma/client": "^4.10.1",
		"@sinclair/typebox": "^0.25.21",
		"@types/validator": "^13.7.12",
		"bcryptjs": "^2.4.3",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"jsonwebtoken": "^9.0.0",
		"prisma": "^4.10.1",
		"tsconfig-paths": "^4.1.2",
		"validator": "^13.9.0",
		"ws": "^8.12.0"
	},
	"optionalDependencies": {
		"bufferutil": "^4.0.7",
		"utf-8-validate": "^6.0.2"
	}
}
