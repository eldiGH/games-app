{
	"name": "games-app",
	"version": "0.0.1",
	"private": true,
	"prisma": {
		"schema": "backend/prisma/schema.prisma"
	},
	"type": "module",
	"extensionless": {
		"lookFor": [
			"js",
			"json"
		],
		"resolveDirs": true
	},
	"scripts": {
		"fe:dev": "node scripts/vite.js dev",
		"fe:build": "node scripts/vite.js build",
		"fe:preview": "node scripts/vite.js preview",
		"be:dev": "tsc-watch2 --watch backend/src --watch shared --watch .env --buildStep 'tsc -b backend' --start 'node --experimental-loader=extensionless -r source-map-support/register dist/backend'",
		"be:build": "tsc -b --clean backend backend/tsconfig-prod.json shared shared/tsconfig-prod.json && tsc -b backend/tsconfig-prod.json",
		"be:start": "node --experimental-loader=extensionless dist/backend",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"prepare": "ts-patch install -s"
	},
	"devDependencies": {
		"@eldigh/tsc-watch2": "^1.0.12",
		"@fontsource/roboto": "^4.5.8",
		"@material/typography": "^14.0.0",
		"@playwright/test": "^1.28.1",
		"@smui/button": "7.0.0-beta.0",
		"@smui/card": "7.0.0-beta.0",
		"@smui/circular-progress": "7.0.0-beta.0",
		"@smui/drawer": "7.0.0-beta.0",
		"@smui/form-field": "7.0.0-beta.0",
		"@smui/layout-grid": "7.0.0-beta.0",
		"@smui/snackbar": "7.0.0-beta.0",
		"@smui/textfield": "7.0.0-beta.0",
		"@smui/top-app-bar": "7.0.0-beta.0",
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/adapter-static": "^1.0.5",
		"@sveltejs/kit": "^1.0.0",
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/node": "^18.13.0",
		"@types/url-join": "^4.0.1",
		"@types/ws": "^8.5.4",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"material-icons": "^1.13.1",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"sass": "^1.57.1",
		"smui-theme": "7.0.0-beta.0",
		"source-map-support": "^0.5.21",
		"svelte": "^3.54.0",
		"svelte-check": "^2.9.2",
		"svelte-forms": "^2.3.1",
		"svelte-material-ui": "7.0.0-beta.0",
		"ts-patch": "^2.1.0",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"typescript-transform-paths": "^3.4.6",
		"url-join": "^5.0.0",
		"vite": "^4.0.0",
		"vitest": "^0.25.3"
	},
	"dependencies": {
		"@prisma/client": "^4.10.1",
		"@types/validator": "^13.7.12",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"extensionless": "^1.1.0",
		"jsonwebtoken": "^9.0.0",
		"prisma": "^4.10.1",
		"tsconfig-paths": "^4.1.2",
		"ws": "^8.12.0",
		"yup": "^1.0.0"
	},
	"optionalDependencies": {
		"bufferutil": "^4.0.7",
		"utf-8-validate": "^6.0.2"
	}
}
